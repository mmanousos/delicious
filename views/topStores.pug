extends layout

block content
  .inner
    h2 Top #{stores.length} Stores
    table.table
      thead
        td Photo
        td Ranking
        td Name
        td Reviews
        td Average Rating
      each store, i in stores
        tr
          td: a(href=`/store/${store.slug}`)
            img(width=200 src=`/uploads/${store.photo || 'store.png'}`)
          td: p #{i + 1}
          td: a(href=`/store/${store.slug}`)= store.name
          td: p #{store.reviews.length}
          td: p #{Math.round(store.averageRating * 10) / 10}